<h1>Home#index</h1>

<div>
	<%= form_for :logins, url: logins_path, method: :create do |f| %>
		<div>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div>
			<%= f.label :password %>
			<%= f.text_field :password %>
		</div>
		<div class="submit-field">
			<%= f.submit "Log in"%>
		</div>
	<% end %>	
</div>

<p><%= link_to "Sign Up", new_user_path %></p>
<% if logged_in? %>
<p><%= link_to "Log Out", logins_path, method: :delete %></p>
<% end %>


