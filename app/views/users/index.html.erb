	<%= form_tag(foods_path, method: :get, class:"form-wrapper-2 cf") do %>
	  <%= select_tag :search, options_from_collection_for_select(Food.select(:name).distinct.order(:name),"name","name"), class:"search-select-tab" %>
	  <%= submit_tag 'Search', name: nil, class:"button" %>
	<%end%>
</div>

<% if logged_in? %>
<p><%= link_to "Log Out", logins_path, method: :delete %></p>
<% end %>

<% if current_user.customer? %>
	<p><%= link_to "Check out foods to order", foods_path %></p>
<% else %>
	<% if current_user.food == false %>
		<p><%= link_to "Create new food listing", new_food_path %></p>
	<% end %>
<% end %>

<div>
	<table>
		<tr>
			<th>No.</th>
			<th>Name</th>
			<th>Type</th>
			<th>Price</th>
			<th>Location</th>
			<th> </th>
		</tr>
	<% @food.each do |x| %>
		<tr>
			<td> <%= x.id=%> </td>
			<td> <%= link_to x.name, food_path(x.id) %> </td>
			<td> <%= x.cuisine %> </td>
			<td> RM <%= x.price %> </td>
			<td> <%= x.location %> </td>
			<td> <%= button_to "Delete", order_path(Order.find_by_user_id_and_food_id(current_user.id, x.id).id), method: :delete %> </td>
		</tr>
	<% end %>

	</table>
</div>